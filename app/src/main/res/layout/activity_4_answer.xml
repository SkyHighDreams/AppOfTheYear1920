<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity_4_answer">
    
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        
        <TextView
            android:id="@+id/txt_answer"
            android:text="@string/string_lbl_answer"
            android:textSize="34sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp">

        <!-- Rij 1-->
        <!-- kolom 1-->
        <ImageButton
            android:id="@+id/btn_answer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/background_btn_1"
            android:onClick="Tologinscreen"
            android:src="@drawable/facebooklike" />
        <!-- Rij 1-->
        <!-- kolom 2-->
        <ImageButton
            android:id="@+id/btn_answer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/instagram"
            android:background="@drawable/background_btn_2"/>

        <!-- Rij 2-->
        <!-- kolom 1-->
        <ImageButton
            android:id="@+id/btn_answer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/youtube"
            android:background="@drawable/background_btn_3"/>

        <!-- Rij 2-->
        <!-- kolom 2-->
        <ImageButton
            android:id="@+id/btn_answer_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/facebooklogo"
            android:background="@drawable/background_btn_4"/>
    </GridLayout>

</LinearLayout>